<html>
<head>
  <title>RedditClone</title>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>

</body>
<footer>
  <% if logged_in? %>
    <form action="<%= session_url %>" method="post">
      <%= auth_token %>
      <input type="hidden" name="_method" value="delete">
      <button>Logout</button>
    </form>
  <%else %>
    <a href='<%= new_session_url %>'> Sign In</a> || <a href='<%= new_user_url %>'> Sign Up</a>
  <% end %>
</footer>
</html>
