<h1> Welcome to <%= @cat.name.capitalize %>'s Page </h1>

<table>
  <tr>
    <td>Name:</td>
    <td><%= @cat.name %></td>
  </tr>

  <tr>
    <td> Sex:</td>
    <td> <%= @cat.sex %> </td>
  </tr>

  <tr>
    <td> Color: </td>
    <td> <%= @cat.color %> </td>
  </tr>

  <tr>
    <td> Age: </td>
    <td> <%= @cat.age %> </td>
  </tr>

  <tr>
    <td> Description: </td>
    <td> <%= @cat.description %> </td>
  </tr>


</table>

<br>
<a href="<%= edit_cat_url(@cat) %>"> Edit this cat! </a>
<br>
<br>

<form action="<%= cat_url(@cat) %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button>Delete this cat!</button>
</form>

<br>
<a href="<%= new_cat_cat_rental_request_url(@cat)%>">Rent this cat</a>

